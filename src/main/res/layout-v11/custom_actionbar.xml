<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/main_menu_display_only"
        android:contentDescription="Main Menu Button"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:src="@drawable/icon_menu"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/cancel_display_only"
        android:contentDescription="Cancel Button"
        android:text="@string/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/action_button1"
        android:contentDescription="Main Menu Button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:onClick="clickActionBar"/>

    <LinearLayout android:id="@+id/frame"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:gravity="center">

        <TextView
            android:id="@+id/action_title"
            android:layout_height="wrap_content"
            android:layout_width="200dp"
            android:clickable="false"
            android:focusable="false"
            android:longClickable="false"
            android:text="@string/app_name"
            android:gravity="center"
            android:singleLine="false"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:layout_centerVertical="true"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/group_list_display_only"
        android:contentDescription="Group List Button"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/icon_groups"
        android:scaleType="centerCrop"
        android:layout_alignRight="@id/frame"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"/>

    <TextView
        android:id="@+id/save_display_only"
        android:contentDescription="Save Button"
        android:text="@string/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_alignRight="@id/frame"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/action_button2"
        android:contentDescription="Group List Button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:layout_centerVertical="true"
        android:onClick="clickActionBar"/>

    <ProgressBar
        android:id="@+id/loading_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

</RelativeLayout>