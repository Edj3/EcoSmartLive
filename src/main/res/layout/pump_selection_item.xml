<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/child_selector"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <TextView
        android:id="@+id/pump_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="225dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="Device 3"
        android:textSize="22sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/pump_model_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#WhatEverModel"
        android:textSize="16sp"
        android:textColor="@color/DarkGray"
        android:layout_below="@+id/pump_name"/>

    <ImageView
        android:id="@+id/identify_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/icon_locate_active"
        android:layout_alignParentRight="true">

    </ImageView>

</RelativeLayout>