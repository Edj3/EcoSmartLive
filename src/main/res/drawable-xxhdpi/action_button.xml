<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="2dp" />
            <stroke android:width="1dp" android:color="@color/SlateGray" />
            <gradient  android:angle="-90"   android:startColor="@color/LightBlue" android:endColor="@color/LightSkyBlue"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="2dp" />
            <solid  android:color="@color/MidnightBlue"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="2dp" />
            <gradient  android:angle="-90"  android:startColor="@color/MidnightBlue" android:endColor="@color/DeepSkyBlue" />
        </shape>
    </item>
</selector>